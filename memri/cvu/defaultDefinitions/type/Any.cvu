[session = *] {
    [view] {
        title: "Everything"
        
        [datasource = pod] {
            query: "*"
        }
    }
}

* {
    searchHint: Search
}


*[]: {
    searchHint: Search
    sortFields: dateCreated dateModified dateAccessed,
    
    [renderer = generalEditor] {
        EditorRow {
            nopadding: true
            padding: 5 36 5 36
/*            spacing: 5*/
            
            HStack {
                alignment: center
                
                MemriButton {
                    item: {{.}}
                }
                Spacer
                Button {
                    press: unlink {
                        subject: {{subject}}
                        edgeType: {{name}}
                    }
                    show: {{!readOnly}}
                    
                    Image {
                        systemName: "minus.circle.fill"
                        color: #ff0000
                    }
                }
            }
        }
    }
}

